<Window x:Class="WpfApp3.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="進捗状況" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <ProgressBar x:Name="ProgressBar" Height="20" Margin="10"/>
            <TextBlock x:Name="ProgressTextBlock" HorizontalAlignment="Left" Margin="10"/>
            <Button x:Name="CancelButton" Content="キャンセル" HorizontalAlignment="Center" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>